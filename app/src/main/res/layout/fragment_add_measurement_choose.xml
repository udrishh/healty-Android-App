<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddMeasurementChooseFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_weight_btn"
            app:cornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="Greutate"
            app:icon="@drawable/scale_icon"
            app:iconTint="@null"
            app:iconGravity="top"
            app:iconSize="100dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_height_btn"
            app:cornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:text="Înălțime"
            app:icon="@drawable/ruler_icon"
            app:iconTint="@null"
            app:iconGravity="top"
            app:iconSize="100dp" />

    </LinearLayout>

</FrameLayout>