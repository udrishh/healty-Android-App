<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".fragments.AddPhysicalActivitySearchFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="8dp"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <Button
                android:id="@+id/add_activity_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adaugă manual"
                app:layout_constraintBottom_toTopOf="@id/add_alternative_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cornerRadius="10dp"/>

            <TextView
                android:id="@+id/add_alternative_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="32dp"
                android:text="sau"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@id/add_activity_search"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_activity_manual" />

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/add_activity_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Caută în baza de date"
                android:minHeight="48dp"
                app:layout_constraintTop_toBottomOf="@id/add_alternative_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/add_activity_continue" />

            <Button
                android:id="@+id/add_activity_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continuă"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_activity_search"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>